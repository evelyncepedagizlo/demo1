                                        <field name="bitacora_id" readonly="1"/>
                                        <field name="clave_acceso_sri" readonly="1"/>
                                        <field name="numero_autorizacion_sri" readonly="1"/>
                                        <field name="fecha_autorizacion_sri" readonly="1"/>
