                            </page>


                            <page string="Tributaci贸n" attrs="{'invisible': [('in_type','!=','ret_in_invoice')]}">
                                <group>
                                    <group>
                                        <field name="email_fe" string="Email Cliente" placeholder="Ingresar los email separado por comas" attrs="{'required':[('in_type','=','ret_in_invoice')],'readonly': [('state','!=','draft')]}"/>
                                    </group>
                                </group>



                                <group id="info_adicional">
                                    <group  >
                                        <field name="campos_adicionales_facturacion" string="Informaci贸n Adicional" attrs="{'readonly':[('state','!=','draft')]}" >
                                            <tree editable="bottom">
                                                <field name="nombre"/>
                                                <field name="valor"/>
